doctype html
html
  head
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f7fa;
        color: #333;
      }
      
      /* CONTAINER */
      .container {
        width: 80%;
        margin: 30px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }

      /* FORM */
      h2 {
        color: #0066ff;
        margin-bottom: 20px;
      }
      form div {
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #444;
      }
      input, textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #bbb;
        border-radius: 6px;
        font-size: 15px;
        transition: border-color 0.3s;
      }
      input:focus, textarea:focus {
        border-color: #0066ff;
        outline: none;
      }
      button {
        background: #0066ff;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background: #004ccc;
      }

      /* BLOG POSTS */
      .post {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
      }
      .post:last-child {
        border-bottom: none;
      }
      .post h2 {
        margin: 0 0 8px;
        color: #333;
        
      }
      .post p {
        color: #555;
      }

     
  body
    header
      include includes/header.pug  

    .container
      h2 Write a New Post
      form(action="/blog" method="POST")
        div
          label(for="title") Title:
          input(type="text" name="title" id="title" placeholder="enter title" required  )
        div
          label(for="content") Content:
          textarea(name="content" id="content" rows="5" placeholder="Enter the text" required)
        div
          button(type="submit") Publish

    footer
      include includes/footer.pug
     
