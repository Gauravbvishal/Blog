doctype html
html
  head
    title My Blog
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #f5f5f5;
      }
      header {
        background: #333;
        color: white;
        padding: 15px;
        text-align: center;
      }
      .container {
        width: 80%;
        margin: 20px auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      }
      form div {
        margin-bottom: 10px;
      }
      label {
        display: block;
        margin-bottom: 5px;
      }
      input, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      button {
        background: #333;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background: #555;
      }
      .post {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
      }
      .post:last-child {
        border-bottom: none;
      }
      .post h2 {
        margin: 0 0 10px;
      }
  body
    header
      h1 My Awesome Blog

    .container
      h2 Write a New Post
      form(action="/blog" method="POST")
        div
          label(for="title") Title:
          input(type="text" name="title" id="title" required)
        div
          label(for="content") Content:
          textarea(name="content" id="content" rows="5" required)
        div
          button(type="submit") Publish
