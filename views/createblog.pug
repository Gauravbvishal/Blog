doctype html
html
  head
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f7fa;
        color: #333;
      }

      /* HEADER */
      header {
        background: linear-gradient(90deg, #0066ff, #00c6ff);
        color: white;
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
      }
      header h1 {
        margin: 0;
        font-size: 26px;
        font-weight: bold;
      }
      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 25px;
      }
      nav ul li a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        font-size: 16px;
        padding: 6px 12px;
        border-radius: 5px;
        transition: background 0.3s, color 0.3s;
      }
      nav ul li a:hover {
        background: rgba(255,255,255,0.2);
        color: #ffeb3b;
      }

      /* CONTAINER */
      .container {
        width: 80%;
        margin: 30px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }

      /* FORM */
      h2 {
        color: #0066ff;
        margin-bottom: 20px;
      }
      form div {
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #444;
      }
      input, textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #bbb;
        border-radius: 6px;
        font-size: 15px;
        transition: border-color 0.3s;
      }
      input:focus, textarea:focus {
        border-color: #0066ff;
        outline: none;
      }
      button {
        background: #0066ff;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background: #004ccc;
      }

      /* BLOG POSTS */
      .post {
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
      }
      .post:last-child {
        border-bottom: none;
      }
      .post h2 {
        margin: 0 0 8px;
        color: #333;
      }
      .post p {
        color: #555;
      }

      /* FOOTER */
      footer {
        margin-top: 30px;
        background: #333;
        color: #ccc;
        text-align: center;
        padding: 15px;
        font-size: 14px;
      }
      footer a {
        color: #00c6ff;
        text-decoration: none;
      }
      footer a:hover {
        text-decoration: underline;
      }

  body
    header
      include header.pug  

    .container
      h2 Write a New Post
      form(action="/blog" method="POST")
        div
          label(for="title") Title:
          input(type="text" name="title" id="title" required)
        div
          label(for="content") Content:
          textarea(name="content" id="content" rows="5" required)
        div
          button(type="submit") Publish

    footer
