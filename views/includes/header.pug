header
  style.
    header {
      background: linear-gradient(90deg, #004e92, #000428);
      color: white;
      padding: 15px 110px;
      display: flex;
      justify-content: space-between;
      
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo {
      display: flex;
      align-items: center;
      font-size: 26px;
      font-weight: bold;
      letter-spacing: 1px;
      cursor: pointer;
    }
    .logo i {
      margin-right: 10px;
      color: #00c6ff;
    }
    .logo span {
      color: #00c6ff;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      gap: 25px;
    }
    nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      font-size: 16px;
      padding: 8px 14px;
      //- border-radius: 8px;
      position: relative;
      transition: all 0.3s ease;
    }
    nav ul li a::after {
      content: "";
      position: absolute;
      width: 0;
      height: 2px;
      left: 0;
      bottom: 0;
      background: #00eaff;
      transition: width 0.3s;
    }
    nav ul li a:hover::after {
      width: 100%;
    }

    .search-bar {
      flex: 1;
      margin: 0 30px;
      display: flex;
      justify-content: center;
    }
    .search-bar input {
      padding: 8px 14px;
      border-radius: 20px;
      border: none;
      outline: none;
      width: 250px;
      max-width: 100%;
      font-size: 14px;
      transition: 0.3s;
    }
    .search-bar input:focus {
      width: 300px;
      box-shadow: 0 0 8px rgba(0, 198, 255, 0.6);
    }

    /* Responsive */
    @media (max-width: 768px) {
      header {
        flex-wrap: wrap;
        padding: 15px 20px;
      }
      .search-bar {
        order: 3;
        width: 100%;
        margin: 10px 0;
      }
      nav ul {
        flex: 1;
        justify-content: flex-end;
      }
    }

