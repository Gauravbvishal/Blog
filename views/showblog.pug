doctype html
html
  head
    title Blog Posts
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f7fa;
        color: #333;
      }

      /* HEADER */
      header {
        background: linear-gradient(90deg, #0066ff, #00c6ff);
        color: white;
        padding: 20px;
        text-align: center;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
      }
      header h1 {
        margin: 0;
        font-size: 28px;
        font-weight: bold;
      }

      /* BLOG LIST */
      .container {
        width: 85%;
        margin: 30px auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
      }

      /* CARD */
      .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 20px;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border-left: 6px solid #0066ff;
      }
      .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
      }
      .card h2 {
        margin: 0 0 12px;
        color: #0066ff;
        font-size: 20px;
      }
      .card p {
        margin: 0 0 10px;
        color: #555;
        line-height: 1.5;
        font-size: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 3;   /* Show only 3 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .read-more {
        display: inline-block;
        margin-top: 25px;
        margin-right:40px;
        text-decoration: none;
        background: #0066ff;
        color: white;
        padding: 12px 20px;
        border-radius: 6px;
        font-size: 15px;
        font-weight: 500;
        transition: background 0.3s, transform 0.2s;
      }
      .read-more:hover {
        color: #004ccc;
        text-decoration: underline;
        transform: translateY(-2px);
      }
       
      a.del-btn {
        display: inline-block;
        margin-top: 25px;
        margin-right:40px;
        text-decoration: none;
        background: #0066ff;
        color: white;
        padding: 12px 20px;
        border-radius: 6px;
        font-size: 15px;
        font-weight: 500;
        transition: background 0.3s, transform 0.2s;
      }
      a.del-btn:hover {
        color: #004ccc;
        text-decoration: underline;
        transform: translateY(-2px);
      }
       
      /* EMPTY STATE */
      .no-posts {
        text-align: center;
        font-size: 18px;
        color: #777;
        margin-top: 50px;
      }

  body
    header
      include header.pug 

    .container
      if blogs.length
        each blog in blogs
          .card(id=`blog-${blog.id}`)
            h2= blog.title
            p= blog.content
            a.read-more(href=`/blog/${blog.id}`) Read more â†’
            a.del-btn(href=`/delete/${blog.id}`) Delete
      else
        p.no-posts No blog posts available yet.
