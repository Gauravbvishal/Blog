doctype html
html
  head
    title Blog Posts
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #f5f5f5;
      }
      header {
        background: #333;
        color: white;
        padding: 15px;
        text-align: center;
      }
      .container {
        width: 80%;
        margin: 20px auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
      }
      .card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
      }
      .card h2 {
        margin: 0 0 10px;
        color: #333;
      }
      .card p {
        margin: 0;
        color: #555;
      }
  body
    header
      h1 Blog Posts

    .container
      if blogs.length
        each blog in blogs
          a(href=`/blog/${blog.id}` style="text-decoration: none; color: inherit;")
            .card(id=`blog-${blog.id}`)
              h2= blog.title
              p= blog.content
      else
        p No blog posts available yet.
